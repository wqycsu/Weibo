<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
	    android:id="@+id/detailed_weibo_header"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/navigationbar_button_background">
	    <ImageView 
	        android:id="@+id/weibo_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="10dp"
	        android:src="@drawable/navigation_button_back"/>

        <TextView
            android:id="@+id/weibo_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:text="微博正文" />
	       
	    <ImageView 
	        android:id="@+id/weibo_more"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_margin="10dp"
	        android:src="@drawable/navigation_button_more"/>
	</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="这是一条微博的内容"/>

</RelativeLayout>
